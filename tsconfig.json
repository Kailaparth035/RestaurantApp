{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "./",
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false
  },
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js"
  ],
  "types": [
    "react",
    "react-dom",
    "react-native",
    "react-test-renderer",
    "jest"
  ],
  "exclude": [
    "build",
    "coverage",
    "node_modules",
    "babel.config.js",
    ".eslintrc.js",
    ".prettirerrc.js",
    "metro.config.js",
    "jest.config.js",
    "index.js",
    "src/app/App.js"
  ]
}
